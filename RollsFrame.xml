<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Script file="RollsFrame.lua"/>

    <Frame name="RollsFrame" parent="UIParent" inherits="BackdropTemplate" hidden="true" movable="true" enableMouse="true" clampedToScreen="true" mixin="RollsFrameMixin">
        <Size x="250" y="300"/>

        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>

        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="title" inherits="GameFontNormalLarge">
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-15"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Frames>
            <ScrollFrame name="ScrollFrame" parentKey="scrollFrame" inherits="UIPanelScrollFrameTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" x="15" y="-40"/>
                    <Anchor point="BOTTOMRIGHT" x="-30" y="40"/>
                </Anchors>
                <ScrollChild>
                    <Frame parentKey="scrollChild">
                        <Size x="210" y="1"/>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>

            <Button parentKey="closeButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-5" y="-5"/>
                </Anchors>
            </Button>

            <Button parentKey="clearButton" text="Clear" inherits="UIPanelButtonTemplate">
                <Size x="100" y="25"/>
                <Anchors>
                    <Anchor point="BOTTOM" x="0" y="10"/>
                </Anchors>
            </Button>
        </Frames>

        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnEvent method="OnEvent"/>
            <OnDragStart>self:StartMoving()</OnDragStart>
            <OnDragStop method="OnDragStop"/>
        </Scripts>
    </Frame>
</Ui>